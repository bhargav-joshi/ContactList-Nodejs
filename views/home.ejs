<html>
    <head>
        <title>
            <%= locals.title%>
        </title>
        <link rel="stylesheet" href="/css/home.css">
        
        <!-- Bootstrap CDN -->
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

        <!-- Optional theme -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

        <!-- Latest compiled and minified JavaScript -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
        
        <script src="https://use.fontawesome.com/3d268a9629.js"></script>

    </head>
    <body>
        <nav class="navbar navbar-inverse navbar-static-top">
            <h1 style="color:white;"><b>Contact List</b> <i class="fa fa-address-book-o" aria-hidden="true"></i></h1>
            </nav>

        </div>
    
        <form action="/create-contact" method="POST">
        <div class="form-row">
        <div class="col" align="center">
            Name => <input type="text" name="name" placeholder="Enter name" required> &nbsp;
            Phone No => <input type="number" name="phone" placeholder="Enter phone" required> &nbsp;
            <button type="submit" class="btn btn-primary active">Add contact</button>
        </div>
        <br>
            
        </form>
            <form> 
                <% for (let i of contact_list) { %> 
                   <div class="contact"> 
                            <h4><%= i.name %> &nbsp;&nbsp; <%= i.phone %>
                                &nbsp;&nbsp;&nbsp;&nbsp;
                                <a href="/delete-contact/?id=<%= i._id %>">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </a>
                            </h4>   
                    </div>
                <% } %>
            </form>
        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>